<Window
    x:Class="CustomWIndow.WIndow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CustomWIndow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="Window_SizeChanged"
    Closed="Window_Closed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border
            x:Name="AppTitleBar"
            Grid.Row="0"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            Visibility="Collapsed">
            <TextBlock
                x:Name="AppTitle"
                Text=""
                VerticalAlignment="Top"
                Margin="30, 8, 0, 0"/>
        </Border>
        
        <NavigationView x:Name="Navigation" Loaded="Navigation_Loaded" SelectionChanged="Navigation_SelectionChanged" ItemInvoked="Navigation_ItemInvoked" IsBackButtonVisible="Auto" BackRequested="n_BackRequested" Grid.Row="1">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Setting" Content="프로그램 설정" Tag="CustomWIndow.Pages.SettingsPage" />
                <NavigationViewItem Icon="Setting" Content="색 설정" Tag="CustomWIndow.Pages.ColorConfigPage" />
                <NavigationViewItem Icon="Setting" Content="기타 설정" Tag="CustomWIndow.Pages.AdvancedSettings" />
                <NavigationViewItem Icon="Setting" Content="개발자 설정" Tag="CustomWIndow.Pages.DeveloperPage" />
            </NavigationView.MenuItems>

            <ScrollViewer>
                <Frame x:Name="ContentFrame"/>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Window>
